<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white_08f" />

            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/white_08f"
                android:startColor="@color/white_08f" />

            <corners android:radius="6dp" />

            <stroke
                android:width="1dp"
                android:color="@color/white_08f" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white_666" />

            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>