		<attr name="margin_left" format="dimension"/>
		<attr name="text_color" format="color"/>
		<attr name="text_size" format="integer"/>
		<attr name="text_num" format="integer"/>
	</declare-styleable>
	
	<declare-styleable name="TextTabView">
		<attr name="icon_show" format="boolean"/>
		
		<attr name="divider_color" format="color"/>
